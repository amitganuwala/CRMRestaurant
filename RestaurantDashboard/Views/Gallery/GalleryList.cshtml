@model RestaurantDashboard.Models.Gallery.GalleryListModel
@{
    ViewData["Title"] = "GalleryList";
    Layout = "~/Views/Shared/_Main_Layout.cshtml";
}

<div class="row">

    <div class="col-md-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home/Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Gallery</li>

        </ol>
    </div>

</div>
<form action="List" method="post">
    <div class="col-md-12">
        <div class="card bg-white mb-3 font-weight-bold">
            @*<a data-toggle="collapse" href="#collapseOne" class="" aria-expanded="true">
                    <div class="card-header" data-widget="collapse">Advance Search <i class="s-14 icon-angle-double-down text-blue font-weight-bold"></i> </div>
                </a>*@
            <div id="collapseOne" class="panel-collapse collapse in" aria-expanded="true" style="">
                <div class="card-body">
                    <div class="card-title"></div>
                    <div class="row">
                        <div class="col-md-4 text-right">
                            <label>Name</label>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <input placeholder="Customer Name" class="form-control r-0 light s-12 " type="text">
                            </div>
                        </div>

                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-6"></div>
                        <div class="col-md-5 col-md-offset-5">
                            <button type="submit" id="search-customer" class="btn-fab shadow btn-primary icon-search"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="container-fluid my-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card no-b">
                <div class="card-body">


                    <table class="table table-light table-bordered table-hover data-tables "
                           data-options='{"searching":false}'>
                        <thead class="bg-light text-black">
                            <tr>
                                <th width="25%">Image</th>
                                <th width="15%">Alt Text</th>
                                <th width="10%">Status</th>
                                <th width="25%" class="sorting_asc_disabled sorting_desc_disabled">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var _objGallery in Model.ListGalleryModel)
                                {
                                    <tr>
                                        <td>
                                            @if (_objGallery.GalleryImage != null)
                                            {
                                                var base64 = Convert.ToBase64String(_objGallery.GalleryImage);
                                                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                                <img src='@imgsrc' style="max-width:100px;max-height:100px" />
                                            }
                                            else
                                            { <img src="" style="max-width:100px;max-height:100px" />}
                                        </td>
                                        <td>
                                            <label>@_objGallery.AltText</label>
                                        </td>

                                        <td>
                                            @if (_objGallery.Status == "Active")
                                            {
                                                <span class="badge badge-success r-5">Active</span>

                                            }
                                            @if (_objGallery.Status == "Inactive")
                                            {

                                                <span class="badge badge-warning r-5">Inactive</span>
                                            }
                                        </td>
                                        <td>

                                            <a href="~/Gallery/EditGallery/@_objGallery.Id"><i class="icon-edit lblue-text"></i></a>
                                            <a href="/Gallery/DeleteGallery/@_objGallery.Id"><i class="icon-trash text-red"></i></a>

                                        </td>
                                    </tr>
                                }
                        </tbody>

                    </table>

                </div>
            </div>

        </div>
    </div>
</div>
<a asp-action="CreateGallery" class="btn-fab btn-fab-md fab-right fab-right-bottom-fixed shadow btn-primary"><i class="icon-add"></i></a>
<script>
    //onload start

    $(".alert").fadeOut(5000);//fade out error messages</script>


